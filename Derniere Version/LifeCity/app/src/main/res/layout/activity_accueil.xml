<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_Commerce"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            android:layout_weight="0.45"
            android:clickable="false"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:contentDescription="commerceLogo"
                    android:paddingTop="10dp"
                    android:scaleType="centerInside"
                    card_view:srcCompat="@drawable/commerce_icon" />

                <TextView
                    android:id="@+id/commerceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.225"
                    android:gravity="center"
                    android:text="Commerces"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.299"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/commerceDescr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.225"
                    android:gravity="center"
                    android:text="Bientot pret!" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_News"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            android:layout_weight="0.45"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:contentDescription="NewsLogo"
                    android:paddingTop="10dp"
                    android:scaleType="centerInside"
                    card_view:srcCompat="@drawable/news_icon" />

                <TextView
                    android:id="@+id/newsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.225"
                    android:gravity="center"
                    android:text="News"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.299"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/newsDescr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.225"
                    android:gravity="center"
                    android:text="Bientot Pret!" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_Reseaux"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            android:layout_weight="0.45"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:paddingTop="10dp"
                    android:scaleType="centerInside"
                    card_view:srcCompat="@drawable/social_icon" />

                <TextView
                    android:id="@+id/reseauxTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.225"
                    android:gravity="center"
                    android:text="RÃ©seaux"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.299"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/reseauxDescr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.225"
                    android:gravity="center"
                    android:text="Bientot pret" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_Publicites"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            android:layout_weight="0.45"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:paddingTop="10dp"
                    android:scaleType="centerInside"
                    card_view:srcCompat="@drawable/pub_icon" />

                <TextView
                    android:id="@+id/pubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.225"
                    android:gravity="center"
                    android:text="Pub"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.299"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/pubDescr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.225"
                    android:gravity="center"
                    android:text="Bientot Pret!" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>