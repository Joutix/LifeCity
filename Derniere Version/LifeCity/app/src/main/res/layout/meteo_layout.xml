<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anndroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.cardview.widget.CardView
android:id="@+id/cvMeteo"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#FEFEFE"
android:layout_margin="8dp"
app:cardCornerRadius="4dp"
anndroid:cardCornerRadius="4dp"
app:cardPreventCornerOverlap="false"
app:cardUseCompatPadding="true">

<!-- Main Content View -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tvMeteoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Name"
            android:textColor="#222"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMeteoDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMeteoName"
            android:gravity="center"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Description"
            android:textColor="#666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvMeteoTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMeteoDescription"
            android:gravity="center"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Description"
            android:textColor="#666"
            android:textSize="14dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>