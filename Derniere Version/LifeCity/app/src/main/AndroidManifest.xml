<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lifecity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.reseaux.GroupChatActivity"></activity>
        <activity
            android:name=".ui.settings.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.news.ui.main.Alarm" />
        <activity
            android:name=".ui.reseaux.MainReseauxActivity"
            android:label="@string/title_activity_main_reseaux"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.commerce.Offre.CommercialOffreActivity"
            android:label="@string/title_activity_commercial_offre"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.commerce.List.CommerceListActivity"
            android:label="@string/title_activity_commerce_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.commerce.MainCommerceActivity"
            android:label="@string/title_activity_main_commerce"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.news.MainNewsActivity"
            android:label="@string/title_activity_main_news"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.pub.PubActivity" />
        <activity android:name=".ui.inscription.InscriptionActivity" />
        <activity android:name=".ui.home.AccueilActivity" />
        <activity android:name=".ui.news.NewsActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>